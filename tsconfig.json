{
    "compilerOptions": {
        "moduleResolution": "Node",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true, //为 false 时，如果编译器无法根据变量的使用来判断类型时，将用 any 类型代替。为 true 时，进行强类型检查，会报错
        "baseUrl": ".", // 解析非相对模块的基地址，默认是当前目录
        "paths": {
            // 路径映射，相对于baseUrl
            "@/*": ["./src/*"] //把@映射为src目录
        }
    },
    "include": ["./src/**/*"]
}
